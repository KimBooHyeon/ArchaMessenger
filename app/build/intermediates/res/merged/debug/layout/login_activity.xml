<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/layout_text"
            android:src="@mipmap/icon"/>
        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="+82"
                    android:textSize="16dp"
                    android:editable="false"
                    android:background="@drawable/edittext_border"/>
                <EditText
                    android:id="@+id/et_phoneNumber"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="15dp"
                    android:hint="10-0000-0000"
                    android:inputType="number"
                    android:textSize="16dp"
                    android:background="@drawable/edittext_border"/>
            </LinearLayout>
            <EditText
                android:id="@+id/et_password"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:hint="password"
                android:textSize="16dp"
                android:background="@drawable/edittext_border"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_text"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_login"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:text="Log In"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:background="@color/skyGreen"/>
            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Sign Up"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:background="@color/darkGray"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tv_welcome"
            android:src="@drawable/icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Welcome To Archa"
            android:textSize="30dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="+82"
                android:textSize="16dp"
                android:editable="false"
                android:background="@drawable/edittext_border"/>
            <EditText
                android:id="@+id/et_phoneNumber_join"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:hint="10-0000-0000"
                android:inputType="number"
                android:textSize="16dp"
                android:background="@drawable/edittext_border"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="Confirmination"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:background="@color/skyBlue"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:hint="인증번호"
                android:inputType="number"
                android:textSize="16dp"
                android:background="@drawable/edittext_border"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_password_join"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_border"
            android:paddingLeft="15dp"
            android:hint="password"
            android:textSize="16dp"/>
        <EditText
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_border"
            android:paddingLeft="15dp"
            android:hint="user name"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_signUp_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/darkGray"
                android:text="CANCEL"
                android:textSize="16dp"
                android:textColor="@color/white"/>
            <View
                android:layout_width="15dp"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/btn_signUp_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/darkGray"
                android:text="Sign Up"
                android:textSize="16dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>